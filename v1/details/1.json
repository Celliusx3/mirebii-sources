{
  "id": "olevod",
  "title": "Olevod",
  "url": "https://www.olehdtv.com",
  "methods": {
    "get_videos": {
      "url": "/index.php/vod/show/by/time/id/{id}/page/{page}.html",
      "body": {
        "id": "body",
        "method": "body",
        "metadata": null,
        "children": [
          {
            "id": "videos",
            "method": "selector_all",
            "metadata": {
              "selector": "ul.vodlist>li.vodlist_item"
            },
            "children": [
              {
                "id": "id",
                "method": "selector",
                "metadata": {
                  "selector": "a.vodlist_thumb",
                  "attributes": "href"
                },
                "children": null
              },
              {
                "id": "title",
                "method": "selector",
                "metadata": {
                  "selector": "a.vodlist_thumb",
                  "attributes": "title"
                },
                "children": null
              },
              {
                "id": "image",
                "method": "selector",
                "metadata": {
                  "selector": "a.vodlist_thumb",
                  "attributes": "data-original"
                },
                "children": null
              }
            ]
          }
        ]
      }
    },
    "search": {
      "url": "/index.php/vod/search/page/{page}/wd/{query}",
      "body": {
        "id": "body",
        "method": "body",
        "metadata": null,
        "children": [
          {
            "id": "videos",
            "method": "selector_all",
            "metadata": {
              "selector": "ul.vodlist>li.searchlist_item"
            },
            "children": [
              {
                "id": "id",
                "method": "selector",
                "metadata": {
                  "selector": "div.searchlist_titbox>h4.vodlist_title>a",
                  "attributes": "href"
                },
                "children": null
              },
              {
                "id": "title",
                "method": "selector",
                "metadata": {
                  "selector": "div.searchlist_titbox>h4.vodlist_title>a",
                  "attributes": "title"
                },
                "children": null
              },
              {
                "id": "image",
                "method": "selector",
                "metadata": {
                  "selector": "div.searchlist_img>a",
                  "attributes": "data-original"
                },
                "children": null
              }
            ]
          }
        ]
      }
    },
    "get_video_details": {
      "url": "{id}",
      "body": {
        "id": "body",
        "method": "body",
        "metadata": null,
        "children": [
          {
            "id": "id",
            "method": "selector",
            "metadata": {
              "selector": "div.content_thumb>a.vodlist_thumb",
              "attributes": "title"
            },
            "children": null
          },
          {
            "id": "title",
            "method": "selector",
            "metadata": {
              "selector": "div.content_thumb>a.vodlist_thumb",
              "attributes": "title"
            },
            "children": null
          },
          {
            "id": "image",
            "method": "selector",
            "metadata": {
              "selector": "div.content_thumb>a.vodlist_thumb",
              "attributes": "data-original"
            },
            "children": null
          },
          {
            "id": "synopsis",
            "method": "selector",
            "metadata": {
              "selector": "div.content_desc>span",
              "attributes": "inner_html"
            },
            "children": null
          },
          {
            "id": "episodes",
            "method": "selector_all",
            "metadata": {
              "selector": "div.playlist_full>ul.content_playlist>li"
            },
            "children": [
              {
                "id": "id",
                "method": "selector",
                "metadata": {
                  "selector": "a",
                  "attributes": "href"
                },
                "children": null
              },
              {
                "id": "title",
                "method": "selector",
                "metadata": {
                  "selector": "a",
                  "attributes": "inner_html"
                },
                "children": null
              }
            ]
          }
        ]
      }
    },
    "get_episode_details": {
      "url": "{id}",
      "body": {
        "id": "body",
        "method": "body",
        "metadata": null,
        "children": [
          {
            "id": "url",
            "method": "regex",
            "metadata": {
              "regex": "\\b((?:https?):\\\\/\\\\/[-a-zA-Z0-9+&@#/%?=~_|!:, .;\\\\]*[-a-zA-Z0-9+&@#/%=~_|\\\\](.mp4|.m3u8))"
            },
            "children": null
          }
        ]
      }
    }
  },
  "pages": {
    "home": {
      "sections": [
        {
          "apiMethod": "get_videos",
          "params": {
            "{id}": "1",
            "{page}": "1",
            "{title}": "电影"
          }
        },
        {
          "apiMethod": "get_videos",
          "params": {
            "{id}": "2",
            "{page}": "1",
            "{title}": "连续剧"
          }
        },
        {
          "apiMethod": "get_videos",
          "params": {
            "{id}": "3",
            "{page}": "1",
            "{title}": "综艺"
          }
        },
        {
          "apiMethod": "get_videos",
          "params": {
            "{id}": "4",
            "{page}": "1",
            "{title}": "动漫"
          }
        }
      ]
    },
    "list": {
      "sections": [
        {
          "apiMethod": "get_videos",
          "params": null
        }
      ]
    },
    "search": {
      "sections": [
        {
          "apiMethod": "search",
          "params": null
        }
      ]
    },
    "video_details": {
      "sections": [
        {
          "apiMethod": "get_video_details",
          "params": null
        }
      ]
    },
    "episode_details": {
      "sections": [
        {
          "apiMethod": "get_episode_details",
          "params": null
        }
      ]
    }
  }
}
